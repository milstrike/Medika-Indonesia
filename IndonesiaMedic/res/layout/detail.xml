<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
			            
			    <TextView
			        android:id="@+id/namaRumahSakit"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Tipe"
			        android:textColor="@color/black"
			        android:textSize="18sp" />
			
			    <TextView
			        android:id="@+id/tipe"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right|center"
			        android:text="Medium Text"
			        android:textColor="@color/black" />

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>
			
			    <TextView
			        android:id="@+id/nama"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Nama"
			        android:textColor="@color/black"
			        android:textSize="18sp" />
			
			    <TextView
			        android:id="@+id/nama2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right"
			        android:text="Medium Text"
			        android:textColor="@color/black" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>
			
			    <TextView
			        android:id="@+id/textView5"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Alamat"
			        android:textColor="@color/black"
			        android:textSize="18sp" />
			
			    <TextView
			        android:id="@+id/alamat"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right"
			        android:text="Medium Text"
			        android:textColor="@color/black" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>
			
			    <TextView
			        android:id="@+id/textView7"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Situs"
			        android:textColor="@color/black"
			        android:textSize="18sp" />

			    <Button
			        android:id="@+id/kunjungi"
			        android:layout_width="wrap_content"
			        android:layout_height="30dp"
			        android:layout_gravity="right"
			        android:background="@color/bluetaskbar"
			        android:onClick="infoDetail"
			        android:text="Kunjungi"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/white" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>
			
			    <TextView
			        android:id="@+id/textView9"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Nomor"
			        android:textColor="@color/black"
			        android:textSize="18sp" />

			    <Button
			        android:id="@+id/hubungi"
			        android:layout_width="wrap_content"
			        android:layout_height="30dp"
			        android:layout_gravity="right"
			        android:background="@color/red"
			        android:onClick="Telepon"
			        android:text="Hubungi"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/white" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>
			
			    <TextView
			        android:id="@+id/textView11"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="left"
			        android:layout_marginTop="10dp"
			        android:text="Lokasi"
			        android:textColor="@color/black"
			        android:textSize="18sp" />

			    <Button
			        android:id="@+id/lihat"
			        android:layout_width="wrap_content"
			        android:layout_height="30dp"
			        android:layout_gravity="right"
			        android:background="@color/green"
			        android:onClick="location"
			        android:text="Lihat Peta"
			        android:textAppearance="?android:attr/textAppearanceSmall"
			        android:textColor="@color/white" />
			    
			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="0.5dp"
			        android:background="@color/gray"
			        android:orientation="vertical" >

			    </LinearLayout>

			    <TextView
			        android:id="@+id/textView2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:text="Latitude"
			        android:textColor="@color/black"
			        android:visibility="gone" />

			    <TextView
			        android:id="@+id/lat"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="Medium Text"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        android:textColor="@color/black"
			        android:visibility="gone" />
			    
			    <TextView
			        android:id="@+id/tampilNoTelepon"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:text="Longitude"
			        android:textColor="@color/black"
			        android:visibility="gone" />
	
	            <TextView
	                android:id="@+id/longi"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center"
	                android:text="Medium Text"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:textColor="@color/black"
	                android:visibility="gone" />
			            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>